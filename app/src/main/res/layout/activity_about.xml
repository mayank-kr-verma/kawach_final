                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=" How to use?"
                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="As soon as the alert button on the front page is pressed, a message with the person's current location,will be sent to the emergency contacts entered. A person can check the help (police station, fire center, hospital) nearby. Moreover any contact added as the emergency contact by the user can check the current location of the user."
                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Credits"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" An app created for the OpenGovDataHack by:
    Team Na'Vi--"

                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

