                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Aditi Roy\n
        Contact : aditiroy.t3@gmail.com"
                android:textColor="#FFFFFF"
                android:autoLink="email"

                android:layout_marginLeft="16dp"
